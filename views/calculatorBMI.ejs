<%-include ("partials/header")%>
<div class="container">
<div class="row">
<div class="col-lg-6">
<form action="/calculatorBMI" method="post">
  <h1>BMI Calculator </h1>
  <!-- dl列表 https://developer.mozilla.org/en-US/docs/Web/HTML/Element/dd -->
  <dl class="">
    <dt>Weight:</dt>
    <dd>  <input type="number" name="weight" value="weightnum" placeholder="Kilogram"></dd>
    <dt>Height:</dt>
    <dd><input type="number" name="hight" value="hightnum" placeholder="Centimeter"></dd>
    <button type="submit" name="bmisumit" class="BUTTON_BMI" >Calculate</button
  ></dl>
</form>
</div>
<div class="col-lg-6">
  <h1><%= bmiValue %> </h1>
  <h1><%= weightStatus%></h1>
</div>
</div>
</div>
<%-include("partials/footer")%>
